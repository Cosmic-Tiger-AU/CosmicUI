{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES6",
    "jsx": "react",
    "declaration": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.spec.tsx"
  ]
}