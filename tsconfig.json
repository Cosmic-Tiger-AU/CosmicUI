{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES6",
    "jsx": "react",
    "declaration": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}